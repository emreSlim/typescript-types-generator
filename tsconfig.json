{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "bin"]
}
