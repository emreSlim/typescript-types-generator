    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2021"],
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
